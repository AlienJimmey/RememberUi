<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.alienjimmey.rememberui.PrimaryController">
   <children>
      <Label text="RememberUi">
         <font>
            <Font size="18.0" />
         </font>
      </Label>
      <TextField fx:id="tarTextField" promptText="copy/from:" />
      <TextField fx:id="destTextField" promptText="past/to:" />
      <Label fx:id="statusLabel" nodeOrientation="LEFT_TO_RIGHT">
         <padding>
            <Insets left="50.0" right="50.0" />
         </padding>
      </Label>
      <ButtonBar prefHeight="40.0" prefWidth="200.0">
        <buttons>
          <Button fx:id="saveButton" mnemonicParsing="false" onAction="#saveLocatons" text="Save" />
            <Button fx:id="backupButton" mnemonicParsing="false" onAction="#copyFile" text="Create Backup" />
        </buttons>
      </ButtonBar>
      <Label fx:id="progressLabel">
         <VBox.margin>
            <Insets />
         </VBox.margin>
         <padding>
            <Insets left="50.0" right="50.0" />
         </padding>
      </Label>
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>
